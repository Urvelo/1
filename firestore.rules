// Firebase Security Rules for Löytökauppa
// Asenna Firebase CLI:llä ja deployaa komennolla: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // JULKISET TUOTTEET JA KATEGORIAT
    // Kaikki voivat lukea tuotteita ja kategorioita
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin(request.auth);
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin(request.auth);
    }
    
    // KÄYTTÄJÄTIEDOT
    // Käyttäjät voivat lukea ja päivittää vain omia tietojaan
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin(request.auth); // Admin voi lukea kaikkia
    }
    
    // TILAUKSET
    // Käyttäjät voivat luoda tilauksia ja lukea omia tilauksiaan
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
        (resource.data.customer_email == request.auth.token.email || isAdmin(request.auth));
      allow update: if isAdmin(request.auth);
      allow delete: if isAdmin(request.auth);
    }
    
    // ADMIN-ALUEET
    // Vain admin-käyttäjät voivat käsitellä admin-tietoja
    match /admin/{document} {
      allow read, write: if isAdmin(request.auth);
    }
    
    // ANALYTIIKKA JA LOKI
    match /analytics/{document} {
      allow read, write: if isAdmin(request.auth);
    }
    
    match /logs/{document} {
      allow create: if request.auth != null;
      allow read: if isAdmin(request.auth);
    }
    
    // HELPER FUNCTIONS
    function isAdmin(auth) {
      return auth != null && 
        (auth.token.email == 'admin@löytökauppa.fi' || 
         (exists(/databases/$(database)/documents/users/$(auth.uid)) && 
          get(/databases/$(database)/documents/users/$(auth.uid)).data.isAdmin == true));
    }
  }
}